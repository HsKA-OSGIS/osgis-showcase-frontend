<tal:block>
<table>
    <tbody>
        <tal:repblock tal:repeat="doc docs">
            <tr>
                <td><h1 tal:content="structure: doc.title"></h1></td>
                <td rowspan="2"><img tal:condition="exists: doc.thumbnail" tal:attributes="src 'https://www.deutsche-digitale-bibliothek.de/' + doc.thumbnail" src="" /></td>
                <td>&nbsp;</td>
            </tr>
            <tr>
                <td><p tal:content="structure: doc.view[0]"></p></td>
                <td><a tal:attributes="href 'https://www.deutsche-digitale-bibliothek.de/item/' + doc.id">Link to DDB</a></td>
            </tr>
        </tal:repblock>
    </tbody>
</table>
</tal:block>
